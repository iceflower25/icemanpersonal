<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bookinfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="0.0dp"
    android:paddingRight="0.0dp"
    android:background="#ffffff"
    android:orientation="vertical">
 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textColor="#000fff"
        android:textStyle="bold"
    	android:shadowColor="#037601"
    	android:shadowDx="1.0"
    	android:shadowDy="0.0"
    	android:shadowRadius="1.0"
        android:text="@+string/bookinfo"
        android:paddingTop="5dp"
        android:paddingLeft="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@+string/img_bookinfo"
            android:id="@+id/img_bookinfo"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:paddingRight="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="190dp"
                android:layout_height="70dp"
                android:textIsSelectable="false"
                android:textSize="14sp"
		android:paddingRight="10dp"
                android:textColor="#2b6771"
                android:textStyle="bold"
                android:shadowColor="#2b6771"
                android:shadowDx="1.0"
                android:shadowDy="0.0"
                android:shadowRadius="1.0">
            </TextView>
            <View
                android:layout_width="5dp"
                android:layout_height="5dp">
            </View>
            <TextView
                android:id="@+id/text_author"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textIsSelectable="false"
                android:textColor="#000000"
                android:textSize="14sp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_publisherinfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textIsSelectable="false"
            android:textColor="#037601"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:shadowColor="#037601"
            android:shadowDx="1.0"
            android:shadowDy="0.0"
            android:shadowRadius="1.0"
            android:text="@+string/publisherinfo"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/publisher_notfound"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="@+string/publisher_notfound"
            android:textSize="13sp">
        </TextView>
        
        <TableLayout
            android:id="@+id/table_pc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <TableRow>
                 <TextView
                    android:text="@+string/publishername"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                <TextView
                    android:id="@+id/text_pcname"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                </TextView>
            </TableRow>
            <TableRow>
                 <TextView
                    android:text="@+string/publisheraddr"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:textIsSelectable="false"
                    android:textSize="13sp"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                 <TextView
                    android:id="@+id/text_pcaddr"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                 </TextView>
            </TableRow>
            <TableRow
                android:id="@+id/row_pctel"
                android:background="#aaaaaa">
                 <TextView
                    android:text="@+string/publishertel"
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                <TextView
                    android:id="@+id/text_pctel"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                </TextView>
            </TableRow>
        </TableLayout>
            
    </LinearLayout>
</LinearLayout>
        