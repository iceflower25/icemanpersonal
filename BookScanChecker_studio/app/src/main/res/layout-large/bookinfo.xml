<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bookinfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="0.0dp"
    android:paddingRight="0.0dp"
    android:background="#ffffff"
    android:orientation="vertical">
 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="24sp"
        android:textColor="#000fff"
        android:textStyle="bold"
    	android:shadowColor="#037601"
    	android:shadowDx="1.5"
    	android:shadowDy="0.0"
    	android:shadowRadius="1.0"
        android:text="@+string/bookinfo"
        android:paddingTop="7.5dp"
        android:paddingLeft="30dp">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@+string/img_bookinfo"
            android:id="@+id/img_bookinfo"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:paddingRight="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="285dp"
                android:layout_height="105dp"
                android:textIsSelectable="false"
                android:textSize="21sp"
		android:paddingRight="15dp"
                android:textColor="#2b6771"
                android:textStyle="bold"
                android:shadowColor="#2b6771"
                android:shadowDx="1.5"
                android:shadowDy="0.0"
                android:shadowRadius="1.5">
            </TextView>
            <View
                android:layout_width="7.5dp"
                android:layout_height="7.5dp">
            </View>
            <TextView
                android:id="@+id/text_author"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:textIsSelectable="false"
                android:textColor="#000000"
                android:textSize="21sp">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_publisherinfo"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textIsSelectable="false"
            android:textColor="#037601"
            android:paddingTop="7.5dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:shadowColor="#037601"
            android:shadowDx="1.5"
            android:shadowDy="0.0"
            android:shadowRadius="1.5"
            android:text="@+string/publisherinfo"
            android:textSize="24sp">
        </TextView>

        <TextView
            android:id="@+id/publisher_notfound"
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:text="@+string/publisher_notfound"
            android:textSize="19.5sp">
        </TextView>
        
        <TableLayout
            android:id="@+id/table_pc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">
            <TableRow>
                 <TextView
                    android:text="@+string/publishername"
                    android:layout_width="90dp"
                    android:layout_height="22.5dp"
                    android:layout_marginTop="7.5dp"
                    android:textSize="19.5sp"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                <TextView
                    android:id="@+id/text_pcname"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:textSize="19.5sp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                </TextView>
            </TableRow>
            <TableRow>
                 <TextView
                    android:text="@+string/publisheraddr"
                    android:layout_width="90dp"
                    android:layout_height="22.5dp"
                    android:textSize="19.5sp"
                    android:layout_marginTop="7.5dp"
                    android:textIsSelectable="false"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                 <TextView
                    android:id="@+id/text_pcaddr"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="19.5sp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                 </TextView>
            </TableRow>
            <TableRow
                android:id="@+id/row_pctel"
                android:background="#aaaaaa">
                 <TextView
                    android:text="@+string/publishertel"
                    android:layout_width="90dp"
                    android:layout_height="22.5dp"
                    android:layout_marginTop="7.5dp"
                    android:textSize="19.5sp"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                <TextView
                    android:id="@+id/text_pctel"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:textSize="19.5sp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@+string/bookcounter"
                    android:layout_width="120dp"
                    android:layout_height="22.5dp"
                    android:layout_marginTop="7.5dp"
                    android:textSize="19.5sp"
                    android:textColor="#2b6771"
                    android:gravity="right">
                </TextView>
                <TextView
                    android:id="@+id/text_bookcounter"
                    android:textColor="#000000"
                    android:textIsSelectable="false"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:textSize="19.5sp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                </TextView>
            </TableRow>
        </TableLayout>
            
    </LinearLayout>
</LinearLayout>
        